{{{html}}}

<section class="single-cta">
    {{#has visibility="paid"}}
        <h2 class="single-cta-title">This post is for campaign contributors only</h2>
    {{/has}}
    {{#has visibility="members"}}
        <h2 class="single-cta-title">This post is for campaign contributors only</h2>
    {{/has}}
    {{#has visibility="filter"}}
        <h2 class="single-cta-title">This post is for subscribers on the {{products}} only</h2>
    {{/has}}
    {{#if @member}}
        <button class="button single-cta-button" data-portal="account/plans">Join now</button>
    {{else}}
        <button class="button single-cta-button" data-portal="signup">Join now</button>
        <br>
        <button class="button-text single-cta-footer" data-portal="signin">Already contributed? Sign in</button>
    {{/if}}
</section>
